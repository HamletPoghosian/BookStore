@model BookStore.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<div class="topbookshow">

</div>
<div class="bookshow">

    <div class="bookimage">
        <img class="showbookimg" src="https://i.pinimg.com/originals/8d/34/3e/8d343e653ded05b99fef7ce135ee5c65.gif" alt="Text" />
    </div>
    <div class="bookshowvalue ">
        <p class="bookname">
            @Html.DisplayFor(model => model.Name)
        </p>
        <p class=" bookautor">
           by @Html.DisplayFor(model => model.Author)
        </p>
        <p class="bookdate">
            ISBN: 9780525539643
            <br>
            SKU: 11255563
            <br>
            @Html.DisplayFor(model => model.PublishDate)
        </p>
        <p class=" bookprise">

            @Html.DisplayFor(model => model.Price)
        </p>
        <p class="bookpopular">
            @Html.DisplayFor(model => model.Popular)
        </p>

    </div>

</div>
<div>

    <a asp-action="Index">Back to List</a>
</div>
